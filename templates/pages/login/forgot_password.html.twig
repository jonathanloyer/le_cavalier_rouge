{% extends 'pages/layout.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="flex justify-center items-center h-screen bg-gray-100">
    <div class="w-full max-w-md bg-white p-8 rounded shadow-lg">
        <h2 class="text-2xl font-semibold text-center mb-6">Mot de passe oublié</h2>

        {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-input'}}) }}
                <div class="text-sm text-red-500">
                    {% for error in form.email.vars.errors %}
                        <p>{{ error.message }}</p>
                    {% endfor %}
                </div>
            </div>

            <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700">
                Envoyer le lien de réinitialisation
            </button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

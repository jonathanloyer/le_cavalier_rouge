{% extends 'pages/layout.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="flex justify-center items-center h-screen bg-gray-100">
    <div class="w-full max-w-md bg-white p-8 rounded shadow-lg">
        <h2 class="text-2xl font-semibold text-center mb-6">Réinitialiser votre mot de passe</h2>

        {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.password) }}
                {{ form_widget(form.password, {'attr': {'class': 'form-input'}}) }}
            </div>
            <div class="mb-4">
                {{ form_label(form.confirm_password) }}
                {{ form_widget(form.confirm_password, {'attr': {'class': 'form-input'}}) }}
            </div>
            <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700">
                Réinitialiser le mot de passe
            </button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

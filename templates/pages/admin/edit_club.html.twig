{# J’indique que ce template hérite du layout global (pages/layout.html.twig) #}
{% extends 'pages/layout.html.twig' %}

{# Je définis la balise <title> comme « Modifier le Club » #}
{% block title %}Modifier le Club{% endblock %}

{# Je débute le bloc "body", où je place le contenu principal de la page #}
{% block body %}
    {# Titre principal h1, taille 3xl, police semi-gras (font-semibold),
       marge-basse (mb-6), et couleur de texte gris foncé (text-gray-800). #}
    <h1 class="text-3xl font-semibold mb-6 text-gray-800">Modifier le Club</h1>

    {# Formulaire POST (méthode="POST"), sans action spécifiée (donc la même URL). #}
    <form method="POST">
        {# Champ pour le nom du club #}
        <div class="mb-6">
            <label for="name" class="block text-lg font-medium text-gray-700">Nom du club</label>
            <div class="mt-1">
                {# Input texte, prérempli avec club.name, obligatoire (required). #}
                <input type="text" id="name" name="name" value="{{ club.name }}" required
                    class="block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
        </div>

        {# Bouton "Enregistrer", occupant toute la largeur (w-full),
           un padding horizontal (px-4) et vertical (py-2),
           un fond bleu (bg-blue-500), texte blanc, coins arrondis (rounded-lg),
           avec transition (hover, focus) #}
        <div class="mt-6">
            <button type="submit"
                    class="w-full py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg shadow-sm hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300">
                Enregistrer
            </button>
        </div>
    </form>
{% endblock %}

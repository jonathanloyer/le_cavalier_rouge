{% extends 'pages/layout.html.twig' %}

{% block title %}Gérer les Clubs{% endblock %}

{% block body %}
    <h1 class="text-2xl font-semibold mb-4">Gestion des Clubs</h1>

    <!-- Formulaire pour ajouter un club -->
    <div class="bg-white shadow-md rounded-lg p-4 mb-6">
        <h2 class="text-xl font-bold mb-4 text-gray-700">Ajouter un club</h2>
        <form method="POST" action="{{ path('admin_manage_clubs') }}">
            <div class="flex items-center space-x-4">
                <input type="text" name="name" placeholder="Nom du club" required
                    class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring focus:border-blue-300">
                <button type="submit" class="bg-green-500 text-white py-2 px-4 rounded-lg hover:bg-green-600 transition duration-300">
                    Ajouter
                </button>
            </div>
        </form>
    </div>

    <!-- Tableau des clubs -->
    <div class="overflow-x-auto bg-white shadow-md rounded-lg">
        <table class="table-auto w-full text-sm text-left text-gray-600">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2">ID</th>
                    <th class="px-4 py-2">Nom</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for club in clubs %}
                    <tr class="border-b">
                        <td class="px-4 py-2">{{ club.id }}</td>
                        <td class="px-4 py-2">{{ club.name }}</td>
                        <td class="px-4 py-2 space-x-2">
                            <!-- Bouton Modifier -->
                            <a href="{{ path('admin_edit_club', {'id': club.id}) }}" class="bg-blue-500 text-white py-1 px-3 rounded hover:bg-blue-600 transition duration-300">
                                Modifier
                            </a>

                            <!-- Bouton Supprimer -->
                            <form action="{{ path('admin_delete_club', {'id': club.id}) }}" method="POST" style="display:inline;">
                                <button type="submit" class="bg-red-500 text-white py-1 px-3 rounded hover:bg-red-600 transition duration-300" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce club ?')">
                                    Supprimer
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="px-4 py-2 text-center text-gray-500">
                            Aucun club trouvé.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

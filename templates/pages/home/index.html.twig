{% extends 'pages/layout.html.twig' %}
{% block title %}
    Accueil
{% endblock %}
{% block body %}
    <!-- Conteneur principal avec flex-grow pour occuper tout l'espace disponible -->
    <div class="flex flex-col items-center justify-center flex-grow px-4">
        <h1 class="text-4xl font-bold text-gray-800 mt-20">Bienvenue</h1>
        <p class="text-lg text-gray-800 mt-4">Au Tournoi de l'association Le Cavalier Rouge</p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-10">
            <!-- Image 1 -->
            <div class="flex flex-col items-center">
                <img src="/img/a.JPEG" alt="Échiquier" class="rounded-lg shadow-md w-64 h-48 object-cover">
                <p class="text-gray-700 mt-4 text-center">Notre passion pour les échecs.</p>
            </div>
            <!-- Image 2 -->
            <div class="flex flex-col items-center">
                <img src="/img/b.JPEG" alt="Tournoi d'échecs" class="rounded-lg shadow-md w-64 h-48 object-cover">
                <p class="text-gray-700 mt-4 text-center">Tournois organisés avec la Fédération Française des Échecs.</p>
            </div>
        </div>
        <!-- Vidéo de présentation d'un échiquier -->
        <div class="mt-10 w-full">
            <h2 class="text-2xl font-bold text-center text-gray-800">Échiquier en Rouge et Blanc</h2>
            <video class="rounded-lg shadow-md mx-auto w-3/4 mt-4" controls>
                <source src="/img/v.MP4" type="video/mp4">
            </video>
        </div>
    </div>
{% endblock %}

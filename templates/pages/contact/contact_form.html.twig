            {# üîπ Champ "Nom" #}
            <div>
                {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm'}}) }}
                {{ form_errors(form.name) }}
            </div>

            {# üîπ Champ "Pr√©nom" #}
            <div>
                {{ form_label(form.firstname, 'Pr√©nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm'}}) }}
                {{ form_errors(form.firstname) }}
            </div>

            {# üîπ Champ "Email" #}
            <div>
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm'}}) }}
                {{ form_errors(form.email) }}
            </div>

            {# üîπ Champ "Message" #}
            <div>
                {{ form_label(form.message, 'Message', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm', 'rows': 5}}) }}
                {{ form_errors(form.message) }}
            </div>

            {# üîπ Bouton "Envoyer" #}
            <div class="flex justify-center">
                {{ form_widget(form.submit, {'attr': {'class': 'px-6 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition'}}) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

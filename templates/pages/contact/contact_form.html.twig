{# J’étends la mise en page globale (pages/layout.html.twig) pour la structure et le style #}
{% extends 'pages/layout.html.twig' %}

{# SEO - Titre de la page #}
{% block title %}Contactez-nous - Club d'Échecs Le Cavalier Rouge
{% endblock %}

{# SEO - Meta Description #}
{% block meta_description %}
	Contactez le Club d'Échecs Le Cavalier Rouge à Clamart pour toute question sur les tournois, les cours et les adhésions.
{% endblock %}

{# SEO - Open Graph Meta Tags (utilisé par Facebook et autres réseaux sociaux) #}
{% block og_title %}Contactez-nous - Club d'Échecs Le Cavalier Rouge
{% endblock %}
{% block og_description %}
	Besoin d'informations sur nos compétitions et événements ? Contactez le Club d'Échecs Le Cavalier Rouge dès maintenant.
{% endblock %}
{% block og_image %}
	{{ asset('img/echiquier-strategie-jeu-echecs.webp') }}
{% endblock %}

{# SEO - Twitter Meta Tags (utilisé par Twitter) #}
{% block twitter_title %}Contactez-nous - Club d'Échecs Le Cavalier Rouge
{% endblock %}
{% block twitter_description %}
	Rejoignez la communauté du Club d'Échecs Le Cavalier Rouge. Contactez-nous pour en savoir plus sur nos activités.
{% endblock %}
{% block twitter_image %}
	{{ asset('img/echiquier-strategie-jeu-echecs.webp') }}
{% endblock %}

{# Contenu principal de la page #}
{% block body %}
    <div class="container mx-auto p-6 bg-gray-100 min-h-screen">
        <h1 class="text-3xl font-bold text-center mb-6 text-gray-800">Contactez-nous</h1>
        <p class="text-gray-600 text-center mb-6">Nous sommes à votre écoute pour toute question.</p>

        {# Messages Flash #}
        {% for message in app.flashes('success') %}
            <div class="flash-success bg-green-100 text-green-700 border border-green-400 px-4 py-3 rounded text-center mb-4">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="flash-error bg-red-100 text-red-700 border border-red-400 px-4 py-3 rounded text-center mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {# Formulaire Symfony #}
        <div class="max-w-lg mx-auto bg-white shadow rounded-lg p-6">
            {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname) }}
                    {{ form_errors(form.firstname) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.message) }}
                    {{ form_widget(form.message) }}
                    {{ form_errors(form.message) }}
                </div>

                <div class="flex justify-center">
                    {{ form_widget(form.submit) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

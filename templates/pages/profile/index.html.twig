{% extends 'pages/layout.html.twig' %}

{% block title %}Profil de
	{{ app.user ? app.user.pseudo : 'Utilisateur' }}
	- le Cavalier Rouge
{% endblock %}

{% block meta_description %}
	Consultez et gérez votre profil sur Le Cavalier Rouge. Suivez vos compétitions et restez informé des événements d'échecs.
{% endblock %}

{% block og_title %}
	Profil de
	{{ app.user ? app.user.pseudo : 'Utilisateur' }}
	- Le Cavalier Rouge
{% endblock %}

{% block og_description %}
	Retrouvez toutes les informations de
	{{ app.user ? app.user.pseudo : 'cet utilisateur' }}
	sur Le Cavalier Rouge. Suivez ses compétitions et évolutions.
{% endblock %}

{% block og_image %}
	{{ app.user.avatar ? asset('uploads/avatar/' ~ app.user.avatar) : asset('img/default-avatar.png') }}
{% endblock %}

{% block og_type %}profile
{% endblock %}

{% block twitter_title %}
	Profil de
	{{ app.user ? app.user.pseudo : 'Utilisateur' }}
	- Le Cavalier Rouge
{% endblock %}

{% block twitter_description %}
	Découvrez le profil de
	{{ app.user ? app.user.pseudo : 'cet utilisateur' }}
	et suivez ses compétitions d'échecs.
{% endblock %}

{% block twitter_image %}
	{{ app.user.avatar ? asset('uploads/avatar/' ~ app.user.avatar) : asset('img/default-avatar.png') }}
{% endblock %}

{% block body %}
	<div class="profile-container max-w-4xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg" data-test="profile-container">
		{% if app.user %}
			<!-- Mise en page en deux colonnes -->
			<div
				class="flex flex-col sm:flex-row">
				<!-- Colonne de gauche : Avatar, bouton Modifier et Supprimer -->
				<div
					class="sm:w-1/3 flex flex-col justify-between">
					<!-- Bloc Avatar avec bouton Modifier positionné en bas à droite de l'image -->
					<div class="relative">
						<img src="{{ app.user.avatar ? asset('uploads/avatar/' ~ app.user.avatar) : asset('images/default-avatar.png') }}" alt="Avatar" class="w-32 h-32 rounded-full border-4 border-gray-300 object-cover" data-test="profile-avatar"/>
						<a href="{{ path('app_profile_update') }}" class="absolute bottom-0 right-0 bg-blue-500 text-white py-1 px-4 w-32 text-center rounded hover:bg-blue-600 focus:outline-none shadow transition-colors duration-200" data-test="profile-edit-button">
							Modifier
						</a>
					</div>
					<!-- Bouton Supprimer aligné en bas de la colonne -->
					<div class="mt-4 text-right">
						<form action="{{ path('app_delete_account') }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete_account') }}">
							<button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-1 px-4 w-32 text-center rounded shadow focus:outline-none focus:ring-2 focus:ring-red-500 transition-colors duration-200">
								Supprimer mon compte
							</button>
						</form>
					</div>
				</div>

				<!-- Colonne de droite : Informations et boutons d'actions -->
				<div
					class="sm:w-2/3 sm:pl-6 mt-6 sm:mt-0">
					<!-- Informations utilisateur dans un bloc à fond gris léger -->
					<div class="bg-gray-100 p-4 rounded">
						<div class="text-center space-y-3" data-test="profile-info">
							<h1 class="text-3xl font-semibold text-gray-800" data-test="profile-pseudo">
								{{ app.user.pseudo ?: 'Pseudo non renseigné' }}
							</h1>
							<div class="flex flex-col sm:flex-row items-center justify-center gap-3 text-gray-600">
								<span data-test="profile-lastname">{{ app.user.lastName ?: 'Nom non renseigné' }}</span>
								<span data-test="profile-firstname">{{ app.user.firstName ?: 'Prénom non renseigné' }}</span>
							</div>
							<p class="text-gray-600" data-test="profile-email">
								<strong>Email :</strong>
								<span>{{ app.user.email ?: 'Email non renseigné' }}</span>
							</p>
							<p class="text-gray-600" data-test="profile-codeFFE">
								<strong>Code FFE :</strong>
								<span>{{ app.user.codeFFE ?: 'Non renseigné' }}</span>
							</p>
							{% if app.user.club %}
								<p class="text-gray-600" data-test="profile-club">
									<strong>Club :</strong>
									<span>{{ app.user.club.name }}</span>
								</p>
							{% else %}
								<p class="text-gray-600" data-test="profile-club">
									<strong>Club :</strong>
									<span>Non renseigné</span>
								</p>
							{% endif %}
						</div>
					</div>

					<!-- Boutons d'Actions : Feuilles de match et Compétitions -->
					<div class="text-center mt-6" data-test="profile-buttons">
						{% if is_granted('ROLE_CAPITAINE') or is_granted('ROLE_ADMIN') %}
							<div class="flex flex-col sm:flex-row items-center justify-center gap-4">
								<a href="{{ path('app_match_sheets') }}" class="bg-purple-500 text-white rounded-lg shadow py-3 px-6 hover:bg-purple-600 transition-colors duration-200 inline-block" data-test="profile-match-sheets-button">
									<span class="text-xl font-bold">Feuilles de match</span>
								</a>
								<a href="{{ path('user_competitions_list') }}" class="bg-blue-500 text-white rounded-lg shadow py-3 px-6 hover:bg-blue-600 transition-colors duration-200 inline-block" data-test="profile-competitions-button">
									<span class="text-xl font-bold">Compétitions</span>
								</a>
							</div>
						{% else %}
							<a href="{{ path('user_competitions_list') }}" class="bg-blue-500 text-white rounded-lg shadow py-3 px-6 hover:bg-blue-600 transition-colors duration-200 inline-block" data-test="profile-competitions-button">
								<span class="text-xl font-bold">Compétitions</span>
							</a>
						{% endif %}
					</div>
				</div>
			</div>
		{% else %}
			<p class="text-center text-gray-600 text-xl" data-test="profile-container-empty">
				Veuillez vous connecter pour accéder à votre profil.
			</p>
		{% endif %}
	</div>
{% endblock %}

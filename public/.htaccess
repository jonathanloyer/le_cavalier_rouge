# Activer la compression Gzip
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/css text/xml text/javascript application/javascript application/x-javascript
</IfModule>

# Forcer HTTPS et redirection vers le bon domaine
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # Rediriger vers l'URL avec www
  RewriteCond %{HTTP_HOST} ^jonathan-loyer.fr [NC]
  RewriteRule ^(.*)$ https://www.jonathan-loyer.fr/$1 [L,R=301]
</IfModule>

# Cache des fichiers statiques (CSS, JS, images) pendant 1 mois
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/gif "access plus 1 month"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType image/webp "access plus 1 month"
  ExpiresByType video/webm "access plus 1 month"
  ExpiresByType video/mp4 "access plus 1 month"
</IfModule>

#  Optimisation des headers pour la sÃ©curitÃ©
<IfModule mod_headers.c>
  Header set X-Content-Type-Options nosniff
  Header set X-XSS-Protection "1; mode=block"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  Header set Referrer-Policy "no-referrer-when-downgrade"
</IfModule>

# Redirection vers l'index Symfony
DirectoryIndex index.php
# Redirection automatique vers index.php de Symfony si aucun fichier n'est trouvÃ©
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.php [QSA,L]

# ðŸ“Œ EmpÃªcher l'accÃ¨s aux fichiers sensibles de Symfony
<FilesMatch "(^\.|composer\.(json|lock)|package(-lock)?\.json|symfony.lock|\.env.*|README.*|phpunit.xml.*)">
    Order allow,deny
    Deny from all
</FilesMatch>

# ðŸ“Œ ProtÃ©ger le dossier /var, /config et autres dossiers sensibles
<IfModule mod_rewrite.c>
  RewriteRule ^(var|config|src|tests|vendor|node_modules)/ - [F,L]
</IfModule>

# ðŸ“Œ DÃ©sactiver l'exÃ©cution des fichiers PHP dans /uploads pour Ã©viter l'upload de scripts malveillants
<Directory "/var/www/html/public/uploads">
    <FilesMatch "\.php$">
        Deny from all
    </FilesMatch>
</Directory>
